{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "src/*",
    "scripts/**/*",
    "*.ts"
  ]
}
