{
  "name": "metrics-plotter-ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json && esbuild dist/plot_metrics.js --bundle --outfile=src/static/bundle.js --platform=browser --minify",
    "prestart": "test -e src/data || ln -s ../data src/data; test -e src/charts || ln -s ../charts src/charts; test -e src/example-data || ln -s ../example-data src/example-data",
    "start": "npx http-server src -c-1 -p 8000",
    "screenshot": "node dist/screenshot.js"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "typescript": "^5.0.0",
    "http-server": "^14.1.1",
    "puppeteer": "^21.3.8",
    "ts-node": "^10.9.1",
    "@types/node": "^20.0.0",
    "@types/puppeteer": "^5.4.7"
  }
}
